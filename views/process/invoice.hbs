{{> header}}
{{> navbar}}

{{#each ticket}}

<form action="/checkout" method="POST">
<div class="container mt-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-8">
            <div class="p-3 bg-white rounded">
                <div class="row">
                    <div class="col-md-6">
                        <h1 class="text-uppercase">Invoice</h1>
                        <div class="billed"><span class="font-weight-bold text-uppercase">Billed:</span><span class="ml-1">{{this.email}}</span></div>
                        <div class="billed"><span class="font-weight-bold text-uppercase">Date:</span><span class="ml-1">{{this.date}}</span></div>
                        <div class="billed"><span class="font-weight-bold text-uppercase">Ticket ID:</span><span class="ml-1">{{this.ticketNumber}}</span></div>
                    </div>
                    <div class="col-md-6 text-right mt-3">
                        <h4 class="text-warning mb-0">XXI Tegal</h4>
                    </div>
                </div>
                <div class="mt-3">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Movie</th>
                                    <th>amount</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.amount}}</td>
                                    <td>Rp {{this.price}}</td>
                                    <td>Rp {{total}}</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td>Total</td>
                                    <td>Rp {{total}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <input type="hidden" name="ticketId" value={{this.id}}>
                <input type="hidden" name="amount" value={{this.amount}}>
                <input type="hidden" name="subTotal" value={{this.total}}>
                <div class="text-right mb-3"><button class="btn btn-warning btn-sm mr-5" type="submit">Pay Now</button></div>
            </div>
        </div>
    </div>
</div>
</form>

{{/each}}



{{> footer}}