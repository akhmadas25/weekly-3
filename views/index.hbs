{{> header}}
{{> navbar}}
<main class="pb-5">
<div class="container-fluid bg-dark" id="card">
<div class="container">
    <div id="myCarousel" class="carousel slide w-50 py-3 ms-auto me-auto" data-bs-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="d-block w-100" src="/public/images/carousel1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/public/images/carousel2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/public/images/carousel1.jpg" alt="Third slide">
        </div>
      </div>
    </div>
</div>

{{!-- movie --}}

<div class="container text-xenter text-light">
  <h2 class="text-center">Movies</h2>
    <div class="row row-cols-1 row-cols-md-3 pb-3 text-center">
			{{#each movies}}
          <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm bg-secondary">
              <div class="card-header py-3">
                <h4 class="my-0 fw-normal">{{this.name}}</h4>
              </div>
              <div class="card-body">
                <img src="{{this.poster}}" alt="">
                <ul class="list-unstyled mt-3 mb-4">
                  <li>{{this.duration}}</li>
                </ul>
                <a class="w-100 btn btn-lg btn-warning" href="/detailMovies/{{this.id}}">detail</a>
              </div>
            </div>
          </div>
		  {{/each}}
    </div>
</div>

</main>
</div>

{{> footer}}